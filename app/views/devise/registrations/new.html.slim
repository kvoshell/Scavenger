.row.devise-pages
  .col-md-offset-7.col-md-4.devise-modal-large
    .modal-title
      h2
        | Sign up
      hr
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .field
        span
          = f.text_field :username, placeholder: "Username", autofocus: true
      .field
        span
          = f.email_field :email, placeholder: "Email"
      .field
        span
          = f.password_field :password, placeholder: "Password", autocomplete: "off"
      .field
        span
          = f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off"
      .actions
        = f.submit "Sign up"
    .devise-partials
      = render "devise/shared/links"
      = render "partials/devise_flash"
= render "partials/footer"
