.row.devise-pages
  .col-md-offset-7.col-md-4.devise-modal
    .modal-title
      h2
        | Change your password
      hr
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token
      .field
        span
          = f.password_field :password, placeholder: "New Password #{@minimum_password_length} characters minimum", autofocus: true, autocomplete: "off"
      .field
        span
          = f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off"
      .actions
        = f.submit "Change my password"
    .devise-partials
      = render "devise/shared/links"
      = render "partials/devise_flash"
= render "partials/footer"
