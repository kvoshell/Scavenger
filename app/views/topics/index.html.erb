<%= render "./partials/subheader" %>

  <div class="row topics">

    <%= render "./partials/sidebar" %>

    <div class="col-md-8 main-content">
      <% @topics.each do |topic| %>
        <ul class="list-group">
          <li class="list-group-item justify-content-between">
            <div class="item-info">
              <h4><%= link_to topic.title, topic_path(topic.id) %></h4>
              <p><%= "#{rand(1..35)} bookmarks by #{rand(1..35)} users" %></p>
            </div>
            <div class="item-options">
              <%= button_to "Add Bookmark", new_topic_bookmark_path(topic.id), method: :get, class: "btn options" %>
              <hr class="h-divider">      
              <%= button_to "Delete Topic", topic_path(topic.id), method: :delete, class: "btn options danger", data: {confirm: "Delete this topic?"} %>
            </div>
          </li>
        </ul>
        <% end %>
    </div>
  </div>

  <%= render "./partials/footer" %>
