<%= render "./partials/subheader" %>
  <div class="row topics">
    <%= render "./partials/sidebar" %>

    <div class="col-md-9 main-content topic-menu">
      <h3>Create a new Topic</h3>
      <%= form_for @topic do |topic| %>
      <div class="form-group">
        <%= topic.text_field :title, class: 'form-control field', placeholder: "Enter topic title" %>
      </div>
      <div class="form-group">
        <%= topic.submit "Save", class: 'btn btn-success' %>
        <%= link_to "Cancel", topics_path, class: 'btn btn-danger' %>
      </div>
  <% end %>
</div>
</div>

  <%= render "./partials/footer" %>
