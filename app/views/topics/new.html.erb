<%= render "./partials/subheader" %>

  <div class="row topics">

    <%= render "./partials/sidebar" %>

<div class="col-md-9 main-content">
  <%= form_for @topic do |topic| %>
  <div class="form-group">
    <%= topic.label :title %>
    <%= topic.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
  </div>
  <div class="form-group">
    <%= topic.submit "Save", class: 'btn btn-success' %>
    <%= link_to "Cancel", topics_path, method: :post, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to cancel this entry?'} %>
  </div>
  <% end %>
</div>
</div>

  <%= render "./partials/footer" %>
